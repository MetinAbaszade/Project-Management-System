        int remaining_estimate_minutes
        int time_spent_minutes
        timestamp due_date
        timestamp created_at
        timestamp updated_at
        string status
        string task_type
    }
    
    TASK_DEPENDENCIES {
        int id PK
        int task_id FK
        int dependent_on_task_id FK
