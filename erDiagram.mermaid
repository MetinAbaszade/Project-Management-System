        timestamp work_date
        string description
        timestamp created_at
    }
    
    ATTACHMENTS {
        int id PK
        int issue_id FK
        int user_id FK
        string file_name
        string file_path
        int file_size
        string file_type
        timestamp created_at
    }
    
    USER_PROJECT {
        int user_id FK
