    BOARDS {
        int id PK
        string name
        int project_id FK
    }
    
    SPRINTS {
        int id PK
        string name
        int board_id FK
        timestamp start_date
        timestamp end_date
        string status
        timestamp created_at
        timestamp updated_at
    }
    
    TASKS {
        int id PK
        string name
        string description
        BOOL priority
        int assignee_id FK
        int project_id FK
        int sprint_id FK
